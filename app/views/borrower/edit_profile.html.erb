<div >
  <h5>
    Edit Borrower Account
  </h5>

  <div>
    <form action="/modify_borrower" method="post">
      <div>
        <label for="username_box">Username</label>
        <input id="username_box" name="query_username" value="<%= @current_borrower.username %>">
      </div>
      <div>
        <label for="first_name_box">First name</label>
        <input id="first_name_box" name="query_first_name" value="<%= @current_borrower.first_name %>">
      </div>
      <div>
        <label for="last_name_box">Last name</label>
        <input id="last_name_box" name="query_last_name" value="<%= @current_borrower.last_name %>">
      </div>
      <div>
        <label for="code_box">Code</label>
        <input id="code_box" name="query_code" value="<%= @current_borrower.code %>">
      </div>
      <div>
        <label for="email_box">Email</label>
        <input id="email_box" name="query_email" value="<%= @current_borrower.email %>">
      </div>
      <div>
        <label for="credit_box">Credit</label>
        <input id="credit_box" name="query_credit" value="<%= @current_borrower.credit %>">
      </div>
      <div>
        <label for="status_box">Status</label>
        <input id="status_box" name="query_status" value="<%= @current_borrower.status %>">
      </div>

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
