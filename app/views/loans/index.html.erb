<div>
  <div>
    <h1>
      List of all loans
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new loan
    </h2>

    <form action="/insert_loan" method="post">
      <div>
        <label for="disbursed_amount_box">
          Disbursed amount
        </label>

        <input type="text" id="disbursed_amount_box" name="query_disbursed_amount">
      </div>

      <div>
        <label for="username_box">
          Username
        </label>

        <input type="text" id="username_box" name="query_username">
      </div>

      <button>
        Create loan
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Disbursed amount
        </th>

        <th>
          Username
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_loans.each do |a_loan| %>
      <tr>
        <td>
          <%= a_loan.id %>
        </td>

        <td>
          <%= a_loan.disbursed_amount %>
        </td>

        <td>
          <%= a_loan.username %>
        </td>

        <td>
        <%= select_date(a_loan.created_at, order: [:year, :month, :day]) %> 
        </td>
        <td>
          <%= select_date(a_loan.created_at+14.days, order: [:year, :month, :day]) %> 
        </td>

        <td>
          <a href="/loans/<%= a_loan.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
